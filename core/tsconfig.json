
{
  "compilerOptions": {
      "lib": ["es2020"],
      "target": "es2020",
      "module": "node16",
      "moduleResolution": "node16",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "declaration": true,
      "sourceMap": true,
      "strict": true,
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "outDir": "./dist"
  },
  "include": [
      "./src/**/*.ts"
  ],
  "exclude": [
      "./src/**/*.test.ts",
      "node_modules"
  ]
}